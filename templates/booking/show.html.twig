{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Date_in</th>
                <td>{{ booking.dateIn ? booking.dateIn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_out</th>
                <td>{{ booking.dateOut ? booking.dateOut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Guests_num</th>
                <td>{{ booking.guestsNum }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ booking.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ booking.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ booking.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
